<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_test">

    <FrameLayout
        android:id="@+id/user_info_flFragmentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200sp" />

    <FrameLayout
        android:id="@+id/attendance_info_flFragmentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info_flFragmentView"
        android:minHeight="400sp">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/navigationFragment_View"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0.1sp" />

</RelativeLayout>